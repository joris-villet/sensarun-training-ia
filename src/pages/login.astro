---
const url = `${Astro.url.origin}/api/auth/google`;
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main>
    <h1 class="text-2xl font-bold my-6 text-center">Connexion</h1>
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
      <div>
        <a
          href={url}
          class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 48 48">
            <path
              fill="#FFC107"
              d="M43.6 20.5H42V20H24v8h11.3C33.3 32.3 29.2 35 24 35c-6.1 0-11-4.9-11-11s4.9-11 11-11c2.8 0 5.4 1 7.4 2.8l5.7-5.7C33.6 6.7 28.9 5 24 5 13.5 5 5 13.5 5 24s8.5 19 19 19c9.8 0 18-7.1 18-19 0-1.2-.1-2.3-.4-3.5z"
            ></path>
            <path
              fill="#FF3D00"
              d="M6.3 14.7l6.6 4.8C14.5 16.2 19 13 24 13c2.8 0 5.4 1 7.4 2.8l5.7-5.7C33.6 6.7 28.9 5 24 5 16.2 5 9.6 9.9 6.3 14.7z"
            ></path>
            <path
              fill="#4CAF50"
              d="M24 43c5.1 0 9.8-1.9 13.3-5l-6.1-5.2C29.5 34.7 26.9 36 24 36c-5.1 0-9.4-3.2-11-7.7l-6.6 5C9.6 38.1 16.2 43 24 43z"
            ></path>
            <path
              fill="#1976D2"
              d="M43.6 20.5H42V20H24v8h11.3c-1.3 3.4-4.5 6-8.3 6-5.1 0-9.4-3.2-11-7.7l-6.6 5C12.6 38.1 18.8 43 24 43c9.8 0 18-7.1 18-19 0-1.2-.1-2.3-.4-3.5z"
            ></path>
          </svg>
          Connexion avec Google
        </a>
      </div>
    </div>
  </main>
</Layout>
